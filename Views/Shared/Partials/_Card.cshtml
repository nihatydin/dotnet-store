@model Product
      <div class="card shadow">
                        <div class="img-wrap">
                            <span class="badge bg-success">İndirim</span>
                            <img src="~/img/@Model.Image" alt="@Model.ProductName" class="card-img-top">
                        </div>

                        <div class="border-top info-wrap">
                            <a href="#" class="float-end btn btn-light">
                                <i class="fa-regular fa-heart"></i>
                            </a>
                            <a  asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id"  class="title text-truncate text-success">@Model.ProductName</a>
                            <div class="price-wrap">
                                <small><del class="price text-muted">@(@Model.Price * 1.2) ₺</del></small>
                                <span class="price-discount">@Model.Price ₺</span>                      
                            </div>
                        </div>
                    </div>
@model Product
      <div class="card shadow">
                        <div class="img-wrap">
                            <span class="badge bg-success">İndirim</span>
                            <img src="~/img/@Model.Image" alt="@Model.ProductName" class="card-img-top">
                        </div>

                        <div class="border-top info-wrap">
                            <a class="float-end btn btn-light">
                                <i class="fa-regular fa-heart"></i>
                            </a>
                            <a style="text-decoration:none" asp-controller="Product" asp-action="Details" asp-action-id="@Model.Id  class="title text-truncate">@Model.ProductName</a>
                            <div class="price-wrap">
                                <span class="price-discount">@Model.Price</span>
                               @* <del class="price">49.999 ₺</del>*@
                            </div>
                        </div>
                    </div>
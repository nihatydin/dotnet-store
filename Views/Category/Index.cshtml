@model List<CategoryGetModel>
@{
    Layout = "_AdminLayout";
}

        <div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header py-1 d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Categories</h5>
                        <a asp-controller="Category" asp-action="Create" class="btn btn-sm btn-primary">
                            <i class="fa-solid fa-plus"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped mb-0">
                                <thead class="table-secondary">
                                    <tr>
                                        <th>Id</th>
                                        <th>Category Name</th>
                                        <th>Category Url</th>
                                        <th>Product Count</th>
                                        <th style="width: 90px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var category in Model){
                                    <tr>
                                        <td>@category.Id</td>
                                        <td>@category.CategoryName</td>
                                        <td>@category.Url</td>
                                        <td>@category.ProductCount</td>
                                        <td>
                                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary btn-sm">
                                                <i class="fa-solid fa-pen-to-square"></i>
                                            </a>
                                            <a href="urun.html" class="btn btn-primary btn-sm">
                                                <i class="fa-solid fa-right-long"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
@{
    Layout = "_AdminLayout";
}
@model ProductEditModel;

    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-9">
                <div class="card shadow">
                    <div class="card-header py-1 d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Update Product</h5>
                        <a href="#" class="btn btn-sm btn-primary">
                            <i class="fa-solid fa-list"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        
                            <input name="Id" value="@Model.Id" type="hidden">
                            <div class="row mb-3">
                                <label asp-for="ProductName" class="col-sm-2 col-form-label">Product Name</label>
                                <div class="col-sm-10">
                                    <input asp-for="ProductName" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="Description" class="col-sm-2 col-form-label">Product Description</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="Price" class="col-sm-2 col-form-label">Price</label>
                                <div class="col-sm-10">
                                    <input asp-for="Price" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="Active" class="col-sm-2 col-form-label">Active</label>
                                <div class="col-sm-10">
                                    <input asp-for="Active" class="form-check-input">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="isHome" class="col-sm-2 col-form-label">HomePage</label>
                                <div class="col-sm-10">
                                    <input asp-for="isHome" class="form-check-input">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label asp-for="CategoryId" class="col-sm-2 col-form-label">Category</label>
                                <div class="col-sm-10">
                                    <select asp-for="CategoryId" class="form-select">
                                        <option value="" selected>Select</option>
                                        @foreach(var item in (List<Category>)ViewBag.Categories){
                                            <option value="@item.Id">@item.CategoryName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-10 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow">
                    <div class="card-body">
                        <img src="~/img/@Model.ImageName" class="img-thumbnail" alt="">
                        <input asp-for="ImageFile" class="form-control mt-3">
                    </div>
                </div>
            </div>
        </div>
    </form>